<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity">

    <TextView
            android:text="June's Change: $30.00"
            android:layout_width="240dp"
            android:layout_height="90dp"
            android:id="@+id/spareChangeTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="36dp"
            android:background="@drawable/rect_purp"
            android:font="@font/opensans_light"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textSize="30dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.496"/>

    <TextView
            android:text="Now Invested: $10.20"
            android:layout_width="240dp"
            android:layout_height="90dp"
            android:id="@+id/investedTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="32dp"
            android:background="@drawable/rect_lblue"
            android:font="@font/opensans_light"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textSize="30dp"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintTop_toBottomOf="@+id/spareChangeTextView"/>

    <TextView
            android:text="Returns:\n$1.02"
            android:layout_width="240dp"
            android:layout_height="90dp"
            android:id="@+id/returnsTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="28dp"
            android:background="@drawable/rect_green"
            android:font="@font/opensans_light"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textSize="30dp"
            app:layout_constraintHorizontal_bias="0.496" app:layout_constraintTop_toBottomOf="@+id/investedTextView"/>

    <TextView
            android:text="Your current ESG score is:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="36dp"
            android:font="@font/opensans_bold"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/returnsTextView" app:layout_constraintHorizontal_bias="0.518"/>

    <TextView
            android:text="76"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/large_circle"
            android:gravity="center"
            android:textSize="70dp"
            android:id="@+id/textView4" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>